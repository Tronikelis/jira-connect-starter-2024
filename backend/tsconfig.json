{
    "compilerOptions": {
        "target": "ES2020",
        "baseUrl": ".",
        "rootDir": "./src",

        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node16",

        "esModuleInterop": true,
        "skipLibCheck": true,

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,

        "paths": {
            "~/*": ["./src/*"]
        }
    },

    "exclude": ["node_modules", "dist"]
}
